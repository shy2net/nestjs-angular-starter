{
  "name": "nestjs-angular-starter",
  "version": "0.6.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "install:all": "bash ./scripts/install_all.sh",
    "build": "bash ./scripts/build.sh",
    "build:nest": "rm -rf dist && tsc -p .",
    "build:angular": "cd angular-src && ng build --aot --prod",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "angular": "cd angular-src && npm start",
    "start": "node dist/src/main.js",
    "start:debug": "node --inspect-brk dist/src/main.js",
    "start:dev": "npm run copy:essentials && nest start --watch",
    "copy:essentials": "bash ./scripts/copy-essentials.sh",
    "ng:test": "cd ./angular-src && ./node_modules/.bin/ng test",
    "ng:test:ci": "cross-env IS_CI=true; cd ./angular-src && ./node_modules/.bin/ng test --no-watch --no-progress --browsers=Headless_Chrome",
    "ng:e2e": "cd ./angular-src && ./node_modules/.bin/ng e2e",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:verbose": "cross-env NODE_ENV=test-verbose mocha",
    "test": "cross-env NODE_ENV=test mocha",
    "test:ci": "cross-env NODE_ENV=test mocha --reporter json > test-results.json"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.7",
    "@nestjs/core": "^9.0.7",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.7",
    "@nestjs/serve-static": "^3.0.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.3.1",
    "class-transformer-validator": "^0.9.1",
    "class-validator": "^0.12.2",
    "config": "^1.30.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mongoose": "^5.10.6",
    "passport": "^0.4.1",
    "passport-facebook-token": "^4.0.0",
    "passport-google-token": "^0.1.2",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "randomstring": "^1.1.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.1",
    "@nestjs/testing": "^9.0.7",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.3",
    "@types/faker": "^5.1.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.161",
    "@types/mocha": "^9.1.0",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^13.9.1",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/randomstring": "^1.1.6",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "faker": "^5.1.0",
    "mocha": "^9.2.0",
    "mongodb-memory-server": "^7.6.3",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-loader": "^6.2.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.7.4"
  }
}
